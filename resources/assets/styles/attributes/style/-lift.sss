@define-mixin -lift
	box-shadow: var(--shadow-x) var(--shadow-y) var(--shadow-blur) var(--shadow-width) var(--shadow-color)

@define-mixin -lift-high
	box-shadow: var(--shadow-x) var(--shadow-y) calc(var(--shadow-blur) * 2) calc(var(--shadow-width) * 2) var(--shadow-color)

@define-mixin -lift-low
	box-shadow: var(--shadow-x) var(--shadow-y) calc(var(--shadow-blur) / 2) calc(var(--shadow-width) / 2) var(--shadow-color)
