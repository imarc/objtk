:root
	font-family: var(--font-family)
	font-size: var(--root-size, 10px)

body
	font-size: var(--font-size)
	line-height: 1.5em

a
	&:link,
	&:visited,
	&:hover,
	&:focus,
	&:active
		color: var(--color)
		text-decoration: none

h1, h2, h3, h4, h5, h6
	line-height: 1em
	font-weight: bold

h1
	font-size: calc(var(--font-size) * 3.5)

	@nest section &
		font-size: calc(var(--font-size) * 3.0)

		@nest section &
			font-size: calc(var(--font-size) * 2.5)

			@nest section &
				font-size: calc(var(--font-size) * 2.0)

				@nest section &
					font-size: calc(var(--font-size) * 1.5)

					@nest section &
						font-size: calc(var(--font-size) * 1.0)

h2
	font-size: calc(var(--font-size) * 3.0)

h3
	font-size: calc(var(--font-size) * 2.5)

h4
	font-size: calc(var(--font-size) * 2.0)

h5
	font-size: calc(var(--font-size) * 1.5)

h6
	font-size: calc(var(--font-size) * 1.0)

blockquote
	border-left: solid 1rem var(--lighter-grey)
	font-style: italic
	padding: 0 var(--padding)

figcaption
	padding: var(--padding)
	background-color: var(--background-color)
	font-style: italic
	text-align: center

cite
	font-family: var(--serif)

	&::before
		content: 'â€”'

hr
	margin: calc(var(--font-size) * 2) 0

img
	width: 100%

code, var, mark
	color: var(--color)
	background-color: var(--background-color)
	padding: .25rem .5rem
	font-size: .85em

mark
	font-style: normal
	font-weight: normal

pre
	padding: 0

	& code
		padding: 1rem 2rem !important
		border-left: solid 10px var(--border-color)
		border-right: solid 10px var(--border-color)

ul, ol
	list-style: none

	&:not([class]), &:not([class])

		//
		// For magic default bullet styles, yo uwill want to modify the mixin, although if you
		// are only looking to change a few things, you might want to check out the _base.sss
		// theme first, you can control color and character there.
		//

		@mixin bullets
