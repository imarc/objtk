@define-mixin -split
	justify-content: space-between

	& > *
		width: 100%

	@media (--screen-tablet)
		& > *
			width: calc(100% / var(--split, 1) - var(--gutter))

@define-mixin -split-2
	@mixin -split

	@media (--screen-tablet)
		& > *
			--split: 2

@define-mixin -split-3
	@mixin -split

	@media (--screen-tablet)
		& > *
			--split: 3

@define-mixin -split-4
	@mixin -split

	@media (--screen-tablet)
		& > *
			--split: 2

	@media (--screen-desktop)
		& > *
			--split: 4
