:root

	/**************************************************************************************************/
	/* Colors
	/**************************************************************************************************/

	--red:    #c44d4f
	--blue:   #4d7498
	--green:  #7ab677
	--orange: #e4b03c
	--yellow: #fffcd9
	--white:  #ffffff
	--black:  #000000
	--grey:   #808080

	--color-base: var(--white)
	--color-face: var(--black)
	--color-accent: var(--grey)
	--color-callout: var(--blue)
	--color-callout-face: var(--white)

	/**************************************************************************************************/
	/* Container
	/**************************************************************************************************/

	--container-max-width: 1440px
	--container-padding-base: var(--padding-base)
	--container-padding-multiplier: var(--padding-multiplier)

	/**************************************************************************************************/
	/* Grid
	/**************************************************************************************************/

	--grid-gutter: var(--padding-base)

	/**************************************************************************************************/
	/* Buttons
	/**************************************************************************************************/

	--button-bg-color: var(--color-callout)
	--button-text-color: var(--color-callout-face)

	--button-padding-base: var(--padding-base)
	--button-padding-divisor: 2

	--button-border-style: var(--border-style)
	--button-border-color: var(--border-color)
	--button-border-width: var(--border-width)
	--button-border-radius: var(--border-radius)
